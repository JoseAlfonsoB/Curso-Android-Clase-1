<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#D3F2F4"
    android:padding="10dp"
    android:layout_margin="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATOS DE LA PERSONA."
        android:textColor="#0D2199"
        android:gravity="center"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DNI"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:background="#CAFFF175"
        />

    <EditText
        android:id="@+id/et_din"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:hint="Ingresa tu DNI."
        android:gravity="left"
        android:maxLength="8"
        android:fontFamily="sans-serif"
        android:textColor="#565555"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:hint="Ingresa tu nombre."
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="#565555"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/et_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:hint="Ingresa tus apellidos."
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="#565555"
        android:enabled="true"
        />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resgistrar"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp"
        android:backgroundTint="#9E87F1"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp"
        android:backgroundTint="#9E87F1"
        android:textSize="20sp"
        />

</LinearLayout>